<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    >

<LinearLayout
    android:id="@+id/LinearLayoutMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_linear_layout"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo mensaje"
        android:layout_weight="1"
        android:textSize="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textViewDataMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="12dp"
        android:textColor="@color/grey"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"/>

    <ImageView
        android:id="@+id/imageViewViewedMessage"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_check_gris"
        android:layout_gravity="bottom"/>

</LinearLayout>
    </RelativeLayout>
