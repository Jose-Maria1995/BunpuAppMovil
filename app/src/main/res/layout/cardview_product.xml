<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFAC07">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/productImagenPerfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_phone"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/productNombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de la empresa"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:maxLines="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/productNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/productImagenProducto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camra_color_primary"
            android:background="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_estrella"
                android:layout_gravity="start"
                android:layout_margin="5dp"/>




        </GridLayout>

        <TextView
            android:id="@+id/textViewLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0 Me interesa"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/productHoras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Hace x horas"
            android:textColor="@color/black"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>